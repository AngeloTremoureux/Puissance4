{
  "compilerOptions": {
    "outDir": "./public/dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "watch": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "watchOptions": {
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "excludeDirectories": ["**/node_modules", "_build"],
  }
}